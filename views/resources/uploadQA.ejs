		<div class="container">
			<div class="row">
				<div class="col-md-12">
				<form role="form" action="/upload_question" method="post" id="uploadform">
					<div class="form-group">
						<label class="control-label text-lg" for="sel1">Select Technology</label>	
					 <select class="form-control" id="select_room" TITLE="Select Technology"
											NAME="ques[room]">
											<option>Java</option>
											<option>Automation Testing</option>
											<option>.Net</option>
											<option>Javascript</option>
											<option>Node js</option>
											<option>Sql</option>
											<option>Nosql</option>
											<option>Python</option>
											<option>Android</option>
											<option>Iphone</option>
											<option>Hadoop</option>
								</select>
						</div>		
						<div class="form-group">
							<label class="control-label" for="exampleInputEmail1">Email
								address</label>
							<input class="form-control" id="exampleInputEmail1" required data-validation-required-message="please enter your email" name=ques[email]
 								placeholder="Enter email" type="email">
						</div>
						
						
						<div class="form-group">
							<label class="control-label" for="textarea1">Your Question</label>
							<textarea class="form-control"  name=ques[question] id="ques_summernote"  required data-validation-required-message="enter question"></textarea>
						</div>
				
						<div class="form-group">
							<label class="control-label" for="summernote">Your Answer</label>
					
								<!-- <div id="summernote">Type your answer here</div> -->
								
						<textarea class="form-control"  id="ans_summernote" required data-validation-required-message="answer could not be blank" name=ques[answer]></textarea>
							
						
						
						</div>
						
						<div class="form-group">
							<label class="control-label" for="sel2">select Tags for your Question</label><br>
							<select required="required" multiple id="example-dropRight" multiple="multiple" class="form-control"  name=ques[tags] style="vertical-align: top;">
        					    <option>core java</option>
       							 <option>j2ee</option>
        						<option>Strings</option>
        						<option>File Io</option>
        						<option>socket</option>
        						<option>collections</option>
       							 <option>jdbc</option>
        						<option>generics</option>
        						<option>flow control</option>
        						<option>localization</option>
        						<option>webservices</option>
       							 <option>interfaces</option>
        						<option>ejb</option>
        						<option>jta</option>
        						<option>jaas</option>
        						<option>jndi</option>
       							 <option>servlets</option>
        						<option>jsp</option>
        						<option>java8</option>
        						<option>lembda expression</option>
        						<option>enumeration</option>
       							 <option>stream method</option>
        						<option>jvm</option>
        						<option>multithreading</option>
        						<option>jsf</option>
        						<option>jpa</option>
                            </select>
						</div>
